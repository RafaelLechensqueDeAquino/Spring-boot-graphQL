type Book {
    id: ID!
    title: String!
    author: Author!
}

type Author {
    id: ID!
    name: String!
    books: [Book!]!
}

type Query {
    getBook(id: ID!): Book
    getAllBooks: [Book!]!
    getAllAuthors: [Author!]!
}

type Mutation {
    addBook(title: String!, authorId: ID!): Book!
    deleteBook(id: ID!): Boolean
}
